{
  "name": "@oss/decrypt",
  "version": "1.1.1",
  "description": "Local decryption CLI for OSS Dev Workflow",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "oss-decrypt": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bundle": "esbuild src/cli.ts --bundle --platform=node --target=node18 --outfile=dist/oss-decrypt.cjs --format=cjs",
    "build:binary": "npm run build:bundle && pkg dist/oss-decrypt.cjs --targets node18-macos-arm64,node18-macos-x64,node18-linux-x64 --out-path dist/bin",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "esbuild": "^0.24.0",
    "pkg": "^5.8.1",
    "typescript": "^5.3.0",
    "vitest": "^3.2.0"
  },
  "dependencies": {
    "commander": "^12.0.0"
  }
}
